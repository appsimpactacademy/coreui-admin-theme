<div class="sidebar sidebar-dark sidebar-fixed border-end" id="sidebar">
  <div class="sidebar-header border-bottom">
    <div class="sidebar-brand">
      <h3>Admin Theme</h3>
    </div>
    <button class="btn-close d-lg-none close-btn" type="button" data-coreui-dismiss="offcanvas" data-coreui-theme="dark" aria-label="Close"></button>
  </div>
  <ul class="sidebar-nav" data-coreui="navigation" data-simplebar>
    <li class="nav-item">
      <%= link_to root_path, class: 'nav-link', target: '_top' do %>
        <svg class="nav-icon">
          <use xlink:href="<%= asset_path('coreui/sprites/free.svg') %>#cil-speedometer">
          </use>
        </svg> Dashboard <span class="badge badge-sm bg-info ms-auto">NEW</span>
      <% end %>
    </li>
    <li class="nav-divider"></li>
    <li class="nav-title">Extras</li>
    <li class="nav-group">
      <a class="nav-link nav-group-toggle" href="#">
        <svg class="nav-icon">
          <use xlink:href="<%= asset_path('coreui/sprites/free.svg') %>#cil-star">
          </use>
        </svg> Pages </a>
      <ul class="nav-group-items compact">
        <li class="nav-item">
        	<%= link_to login_path, class: 'nav-link', target: '_top' do %>
            <svg class="nav-icon">
              <use xlink:href="<%= asset_path('coreui/sprites/free.svg') %>#cil-account-logout">
              </use>
            </svg> Login 
          <% end %>
        </li>
        <li class="nav-item">
        	<%= link_to register_path, class: 'nav-link', target: '_top' do %>
            <svg class="nav-icon">
              <use xlink:href="<%= asset_path('coreui/sprites/free.svg') %>#cil-account-logout">
              </use>
            </svg> Register 
          <% end %>
        </li>
        <li class="nav-item">
        	<%= link_to errors_path, class: 'nav-link', target: '_top' do %>
            <svg class="nav-icon">
              <use xlink:href="<%= asset_path('coreui/sprites/free.svg') %>#cil-bug">
              </use>
            </svg> Error 404 
          <% end %>
        </li>
      </ul>
    </li>
  </ul>
  <div class="sidebar-footer border-top d-none d-md-flex">
    <button class="sidebar-toggler" type="button" data-coreui-toggle="unfoldable"></button>
  </div>
</div>